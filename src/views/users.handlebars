<div class="container mx-5">
<a  class="mt-3" href="/profile">Go to profile</a>
<h1>Usuarios registrados</h1>

<table class="table" id="usersTable">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td>{{this.first_name}} {{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>
        <select class="form-select" name="role_{{this._id}}" aria-label="Default select example">
            <option selected>{{this.role}}</option>
            <option value="PREMIUM">PREMIUM</option>
            <option value="USER">USER</option>
        </select>
      </td>
      <td><button type="button" name="{{_id}}" class="btn btn-info" onclick="updateUser(this)">UPDATE</button></td>
      <td><button type="button" name="{{_id}}" class="btn btn-danger" onclick="deleteUser(this.name)">DELETE</button></td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
</div>
